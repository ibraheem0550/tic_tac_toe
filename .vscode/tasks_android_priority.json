{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run on Android (Priority)",
      "type": "shell",
      "command": "flutter",
      "args": ["run", "-d", "android"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": ["$dart"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "Run on Windows (Fallback)",
      "type": "shell", 
      "command": "flutter",
      "args": ["run", "-d", "windows"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": ["$dart"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
